{{! Note this is a handlebars template. Changing values in here requires a grunt rebuild}}
{{! $css helper contract is f: property_name default_val type default_val2 -> string}}
{{! not $css generally the context (for property names) is the uiOptions values see ui/standardUI for implementation}}
{{! update the Browser object is also now part of the context so you can do #if ie6 or something}}
#ircui {
    height: 100%;
    width: 100%;
    overflow: hidden;
    font-family: Verdana, sans-serif;
}

.qui .hidden, .qui .invisible {
    display: none;
}

.channel-name {
    background-color: rgb(255, 255, 191);
    border: 1px solid #C8D1DB;
    border-radius: 4px 4px 4px 4px;
    color: #000000;
    cursor: default;
    font-size: 0.8em;
    padding: 2px;
    text-decoration: none;
    white-space: nowrap;
    float: left;
    margin: 1px 0px 0px 1px;
    font-weight: bold;
}

.qui .widepanel {
    width: 100%;
}

.qui .lines {
    color: black;
    overflow: auto;
    font-size: {{$css 'font_size' 12}}px;
    background: {{$css 'lines_background' 'f2f0ff' 'c'}};
}

.qui .lines .timestamp {
    display: {{$css 'show_timestamps' 'inline' 'comp' 'none'}};
}

.qui .lines .nick {
    margin-right: 4px;
}

.qui .lines .nick .channel {
    color: rgb(109, 89, 89);
}

.qui .ircwindow .lines {
    font-family: Consolas, "Lucida Console", monospace;
    text-indent: 10px;
    padding-left: 1em;
    word-wrap: break-word;
}

.qui .lines .highlight1 {
    background-color: {{$css 'lines_highlight1' 'f6ff94' 'c'}};
}

.qui .lines .highlight2 {
    background-color: {{$css 'lines_highlight2' 'A4FCCA' 'c'}};
}

.qui .lines .highlight3 {
    background-color: {{$css 'lines_highlight3' 'FAC3D5' 'c'}};
}

.qui .lines .mentioned {
    background-color: {{$css 'mentioned_colour' 'E63772' 'c'}} !important;
}

.qui .properties {
    background-color: {{$css 'menu_background' 'f2f0ff' 'c'}};
    border-top: 1px solid {{$css 'menu_border' 'c8d2dc' 'c'}};
    height: 25px;
}

.qui .topic .emptytopic {
    color: gray;
}

.qui .topic {
    color: gray;
    padding-left: 5px;
    font-size: 0.7em;
    cursor: default;
    background-color: {{$css 'topic_background' 'f2f0ff' 'c'}};
    border-bottom: 1px dashed {{$css 'topic_border' 'c8d2dc' 'c'}};
}

/*tab stuff*/

.qui .outertabbar {    
    border-bottom: 1px solid {{$css 'tabbar_border' 'c3cee0' 'c'}};
    background: {{$css 'tabbar_background' 'e2ecf9' 'c'}};
    height: 26px;
    line-height: 20px;
    padding: 2px 0;
}

.qui .outertabbar > * {
    vertical-align: top;
}

.qui .tabbar {
    color: {{$css 'tabbar_text' '000000' 'c'}};
    display: inline-block;
    overflow-x: hidden;
    margin-left: 10px;
    font-size: 13px;
    height: 22px;
}

.qui .tabbar .tab {
    padding: 2px;
    cursor: default;
    margin-right: 3px;
    white-space: nowrap;
    font-weight: bold;

    color: {{$css 'tab_text' '000000' 'c'}};
    border: 1px solid {{$css 'tab_border' 'c8d2dc' 'c'}};
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
}

.qui .tabbar .tab:hover {
    background: {{$css 'tab_hover' 'ffffff' 'c'}};
    border: 1px solid #c8d2dc;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
}

.qui .tabbar .hilight-activity.tab {
    color: #009900;
}

.qui .tabbar .hilight-speech.tab {
    color: #0000ff;
}

.qui .tabbar .hilight-us.tab {
    color: #ff0000;
    background: rgb(216, 216, 138);
}


.qui .tabbar .selected.tab {
    background: {{$css 'tab_selected' 'ffffff' 'c'}};
    border: 1px solid {{$css 'tab_selected_border' 'c8d2dc' 'c'}};
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    color: {{$css 'tab_selected_text' '333333' 'c'}};
}

.qui .buttons {
    display: none;
}

.qui.signed-in .buttons {
    display: inline-block;
    cursor: pointer;
}

.buttons span {
    vertical-align: middle;
    display: inline-block;
}

/* tab stuff */

/*irc input stuff*/
.qui .input {
    background-color: {{$css 'menu_background' 'f2f0ff' 'c'}};
    margin: 0;
}

.qui .input div {
    border-top: 1px solid {{$css 'input_border' 'c3cee0' 'c'}};
    padding: 0 5px 1px;
    margin: 0;
    width: 100%;
}

.qui .input div > .input-group-addon {
    cursor:pointer;cursor:hand;
    padding: 2px 5px;
}

.qui .input div > * {
    height: 24px;
}

.qui .input .nickname {
    color: #524F50;
    font-size: 14px;
}

.qui .user .status {
    border-radius: 50%;
    display: inline-block;
    margin-right: 3px;
}

.qui .user .status.voice {
    width: 8px;
    height: 8px;

    background-color: rgb(223, 187, 47);
    background-image: radial-gradient(45px 45px 45deg, circle, yellow 0%, orange 100%, red 95%);
    background-image: -moz-radial-gradient(45px 45px 45deg, circle, yellow 0%, orange 100%, red 95%);
    background-image: -o-radial-gradient(45px 45px 45deg, circle, yellow 0%, orange 100%, red 95%);
    background-image: -webkit-radial-gradient(45px 45px, circle, yellow, orange);
    animation-name: spin;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    -webkit-animation-name: spin;
    -webkit-animation-duration: 3s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
    -moz-animation-name: spin;
    -moz-animation-duration: 3s;
    -moz-animation-iteration-count: infinite;
    -moz-animation-timing-function: linear;
    -o-animation-name: spin;
    -o-animation-duration: 3s;
    -o-animation-iteration-count: infinite;
    -o-animation-timing-function: linear;
}

.qui .user .status.op {
    width: 8px;
    height: 8px;

    background-color: #7AE60E;
    background-image: radial-gradient(45px 45px 45deg, circle, #5FFF4A 3%, #7AE60E 76%);
    background-image: -moz-radial-gradient(45px 45px 45deg, circle, #5FFF4A 3%, #7AE60E 76%);
    background-image: -o-radial-gradient(45px 45px, circle, #5FFF4A 3%, #7AE60E 76%);
    background-image: -webkit-radial-gradient(45px 45px, circle, #5FFF4A 3%, #7AE60E 76%);
    animation-name: spin;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    -webkit-animation-name: spin;
    -webkit-animation-duration: 3s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-timing-function: linear;
    -moz-animation-name: spin;
    -moz-animation-duration: 3s;
    -moz-animation-iteration-count: infinite;
    -moz-animation-timing-function: linear;
    -o-animation-name: spin;
    -o-animation-duration: 3s;
    -o-animation-iteration-count: infinite;
    -o-animation-timing-function: linear;
}

.qui .input .tt-query {
    border: 1px solid {{$css 'input_border' 'c3cee0' 'c'}};
    padding: 0;
    height: 26px;
    text-indent: 5px;
}

.qui .input .decorated {
    background-image: linear-gradient(bottom, rgb(235,235,232) 54%, rgb(247,250,240) 66%);
    background-image: -o-linear-gradient(bottom, rgb(235,235,232) 54%, rgb(247,250,240) 66%);
    background-image: -moz-linear-gradient(bottom, rgb(235,235,232) 54%, rgb(247,250,240) 66%);
    background-image: -webkit-linear-gradient(bottom, rgb(235,235,232) 54%, rgb(247,250,240) 66%);
    background-image: -ms-linear-gradient(bottom, rgb(235,235,232) 54%, rgb(247,250,240) 66%);
    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0.54, rgb(235,235,232)),
        color-stop(0.66, rgb(247,250,240))
    );
}

/*twitter typeahead inspired autocomplete using overlay input box*/
.qui .tt-hint {
    position: absolute;
    top: 0px;
    left: 0px;
    padding: 0;
    text-indent: 5px;
    border-color: transparent;
    box-shadow: none;
    color: #BDBDBD;
}

.qui .tt-query {
    position: relative;
    vertical-align: top;
    background-color: transparent;
}
/*end typeahead*/

.qui .input .btn.send {
    color: grey;
    padding: 2px 10px;
}

.qui .nicklist {
    border-left: 1px solid {{$css 'nicklist_border' 'c8d2dc' 'c'}};
    width: 140px;
    overflow: auto;
    background: {{$css 'nicklist_background' 'f2f0ff' 'c'}};
    color: {{$css 'nicklist_text' '000000' 'c'}};
    font-size: 0.7em;
}


.qui .nicklist .user, .qui .nick-menu {
    display: block;
    color: black;
    text-decoration: none;
    cursor: default;
    border-top: 1px solid {{$css 'nicklist_background' 'f2f0ff' 'c'}};
    border-bottom: 1px solid {{$css 'nicklist_background' 'f2f0ff' 'c'}};
    padding-left: 1px;
}

.qui .nick-menu {
    width: initial;
}

.qui .nick-menu ul {
    margin: 0;
    padding-left: 20px;
    list-style-type: circle;
}

.qui .nick-menu li {
    cursor:pointer;cursor:hand;
}

.qui .nicklist .selected {
    display: block;
    color: black;
    background: white;
    text-decoration: none;
    border-bottom: {{$css 'nicklist_selected_border' 'c8d2dc' 'c'}} 1px solid;
    cursor: default;
}

.qui .nicklist .selected-middle {
    border-top: {{$css 'nicklist_selected_border' 'c8d2dc' 'c'}} 1px solid;
}

.qui .nicklist .menu {
    margin: 0 0 0 5px;
}

.qui .nicklist .menu a {
    border-bottom: 0;
    border-top: 0;
}

.hyperlink-whois, .hyperlink-channel {
    cursor: pointer;
    cursor: hand;
}

.hyperlink-whois:hover, .hyperlink-channel:hover {
    text-decoration: underline;
}

.qui .outertabbar .dropdown-tab {
    cursor: pointer; cursor: hand;
    display: inline-block;
    padding-left: 4px;
    width: 30px;
}

.qui .dropdownmenu {
    position: absolute;
    z-index: 100;
    border: 1px solid {{$css 'menu_border' 'c8d2dc' 'c'}};
    background: {{$css 'menu_background' 'f2f0ff' 'c'}};
    list-style: none;
    padding: 5px 10px;
    font-size: 0.7em;
}

.qui .dropdownmenu a {
    color: black;
    cursor: pointer;
    cursor: hand;
    padding-top: 3px;
}

.qui .dropdownmenu a:hover {
    background: {{$css 'menu_hover_background' 'FFFE' 'c'}};
}

.qui .dropdownhint {
  position: relative;
  left: -500px;
  z-index: 10;
  white-space: nowrap;
  font-size: 0.7em;
}

.qui .chanmenu {
    width: 150px;
}

.qui .chanmenu .hint {
    float: right;
    font-size: 75%;
    color: grey;
}

.qui hr.lastpos {
  border: none;
  border-top: 1px solid {{$css 'lastpositionbar' 'C8D2DC' 'c'}};
  margin: .5em 3em;
}

.qwebirc-init-channels {
    font-size: 95%;
    color: #928D8D;
    text-align: center;
}
